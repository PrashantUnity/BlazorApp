<div class="row mb-5">
    <div class="col"> 
        <h1 class="fs-3 fw-bold">@Project.Title</h1>
        <p class="text-muted">@Project.DescriptionShort</p>
        <img class="img-fluid my-5 mt-md-3" alt="@Project.Title" src="@Project.ImageUrl" />
        <div class="row">
            <div class="col-md-9">
                <p>@Project.DescriptionParagraph1</p>
                <p class="mb-4">@Project.DescriptionParagraph2</p>
            </div>
            <div class="col">
                <div class="row row-cols-2 row-cols-sm-3 row-cols-md-1">
                    <div class="col">
                        <h3 class="fs-6 fw-bold text-primary mb-0">Client</h3>
                        <p class="text-muted">@Project.ClientInfo.ClientName</p>
                    </div>
                    <div class="col">
                        <h3 class="fs-6 fw-bold text-primary mb-0">Category</h3>
                        <p class="text-muted">@Project.ClientInfo.Category</p>
                    </div>
                    <div class="col">
                        <h3 class="fs-6 fw-bold text-primary mb-0">Date</h3>
                        <time class="text-muted">@Project.ClientInfo.Date.ToString("MMM dd, yyyy")</time>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@code
{
