        DescriptionParagraph2 = "Phasellus habitasse in, metus proin aliquam. Bibendum neque dictum, lacus nisl netus sodales et id lacinia quam. Sodales hendrerit fringilla sodales nam venenatis, at facilisis viverra. Faucibus aenean ligula ultrices.",
        ClientInfo = new ClientInfo
        {
            ClientName = "John Doe",
            Category = "Graphic Design",
            Date = new DateTime(2024, 11, 13)
        }
    };
    public class ProjectThreeDetails
    {
        public string Title { get; set; } = "Peach App";
        public string DescriptionShort { get; set; } = "Android Icon";
        public string ImageUrl { get; set; } = "https://placehold.co/400";
        public string DescriptionParagraph1 { get; set; }
        public string DescriptionParagraph2 { get; set; }

        public ClientInfo ClientInfo { get; set; }
    }

    public class ClientInfo
    {
        public string ClientName { get; set; } = "John Doe";
        public string Category { get; set; } = "Graphic Design";
        public DateTime Date { get; set; } = new DateTime(2024, 11, 13);
    }

}
