<div class="row mb-5">
    <div class="col"> 
        <h1 class="fs-3 fw-bold">@Project.Title</h1>
        <p class="text-muted">@Project.Subtitle</p>
        <p>@Project.Description</p>

        <h3 class="fs-4 fw-bold mb-4" id="section-1">
            <a class="link-primary me-2" href="#section-1">#</a>@Project.Section1.Heading
        </h3>
        <p>@Project.Section1.Content</p>

        <figure class="my-4">
            <blockquote class="blockquote">
                <p class="mb-0">"@Project.HighlightedQuote.Text"</p>
            </blockquote>
            <figcaption class="blockquote-footer">@Project.HighlightedQuote.Author</figcaption>
        </figure>

        <p class="mb-4">@Project.ExtendedDescription</p>
        <img class="img-fluid mb-5" alt="@Project.Title" src="@Project.ImageUrl" />

        <h3 class="fs-4 fw-bold mb-4" id="section-2">
            <a class="link-primary me-2" href="#section-2">#</a>@Project.Section2.Heading
        </h3>
        <p>@Project.Section2.Content</p>
        @if (Project.Section2.BulletPoints != null)
        {
            <ul>
                @foreach (var point in Project.Section2.BulletPoints)
                {
                    <li>@point</li>
                }
            </ul>
        }
        <p>@Project.Section2.Content</p>
    </div>
</div>
